<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/headerH"
    android:background="@color/backgroundHeader"
    >
    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/zero"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginStartHeader"
        android:fontFamily="@font/pillowtalk"
        android:text="@string/lomu_stop_watch"
        android:textColor="@color/white"
        android:textSize="@dimen/textHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/sizeImage"
        android:layout_height="@dimen/sizeImage"
        android:layout_marginBottom="@dimen/marginBottomNavImage"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/stop" />
</androidx.constraintlayout.widget.ConstraintLayout>