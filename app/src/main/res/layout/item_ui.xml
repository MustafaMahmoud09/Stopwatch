<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_two"
    android:layout_marginBottom="@dimen/marginBtnCancelDialogFinish"
    android:backgroundTint="@color/btnColor"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ProgressBar
        android:id="@+id/progressClock"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/widthProgressItem"
        android:layout_height="@dimen/progressItemSize"
        android:indeterminateDrawable="@drawable/progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginStart="@dimen/marginTopProgressTimer"
        android:textColor="@color/white"
        android:textSize="@dimen/marginTextNameItem"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/progressClock"
        app:layout_constraintEnd_toEndOf="@+id/progressClock"
        app:layout_constraintStart_toStartOf="@+id/progressClock"
        app:layout_constraintTop_toTopOf="@+id/progressClock" />
</androidx.constraintlayout.widget.ConstraintLayout>
